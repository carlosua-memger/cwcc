<div class="tab-content">
	<div id="tab_0" class="tab-pane active">
		<div class="portlet box grey-cascade">
			<div class="portlet-title">
				<div class="caption">
					<i class="fa fa-file-text"></i>New Other Disbursement Form
				</div>
				<div class="tools">
					<a class="collapse" href="javascript:;">
					</a>
					<a class="config" data-toggle="modal" href="#portlet-config">
					</a>
					<a class="reload" href="javascript:;">
					</a>
					<a class="remove" href="javascript:;">
					</a>
				</div>
			</div>
			<div class="portlet-body form">





				<div class="row">
					<div class="col-md-6">


						<h3 class="form-section">Other Disbursement info</h3>



						<form id="CreateTransaction" class="form-horizontal" method="Post" onsubmit="return DoCreateTransaction()">


							<div class="form-horizontal">

								<div class="form-group">
									<label class="col-md-3 control-label">Transaction date<span class="required" aria-required="true">*</span>
									</label>
									<div class="col-md-8">
										<input type="text" name="trandate" id="trandate" placeholder="Select Date"
											class="form-control date-picker-notime" maxlength="50" Required>
										<span class="help-block c_h_date" style="color:red;"></span>

									</div>
								</div>


				
								<div class="form-group">
									<label class="col-md-3 control-label">Partner</label>
									<div class="col-md-8">
										<select name="partner" id="partner" class="form-control">
											{{range  $key ,$val := .Ls_partner}}
											<option value="{{ index  $val 0}}">{{ index  $val 1}}</option>
											{{end}}
										</select>
									</div>
								</div>

								<div class="form-group">
									<label class="col-md-3 control-label">Transaction Type</label>
									<div class="col-md-8">
										<select name="trantype" id="trantype" class="form-control">
											{{range  $key ,$val := .Ls_trantype}}
											<option value="{{ index  $val 0}}">{{ index  $val 1}}</option>
											{{end}}
										</select>
									</div>
								</div>

								


							
								<div class="form-group">
									<label class="col-md-3 control-label">Remarks</label>
									<div class="col-md-8">

										<!--<input type="text" name="remarks" placeholder="remarks"  maxlength="100" class="form-control createAct">-->
										<textarea name="remarks" class="form-control createAct"></textarea>
									</div>
								</div>

							</div>

						


						</form>


					</div>

					

				</div>
				<div class="form-actions fluid">
					<div class="col-md-offset-3 col-md-9">
						<button type="submit" id="btnSubmit" class="btn blue submit_btn"
							onclick="return DoCreateTransaction()">Save</button>
						<button class="btn default" id="btnGoBack"
							onclick="javascript:nav_back('/transaction/other_disbursement?rights={{.Rights}}')"
							type="button">Go Back</button>
					</div>
				</div>


			</div>





		</div>
	</div>




</div>

</div>




<script type="text/javascript">

	$("[name=partner]").select2();

	function DoCreateTransaction() {
		var proceed = true;

		if (document.getElementById("partner").selectedIndex == 0) {
			proceed = false;
			alert("Invalid partner");
		}
	
		if (proceed) {

			$("#btnGoBack").attr("disabled", true);
			$("#btnSubmit").attr("disabled", true);
			document.getElementById("btnSubmit").innerHTML = "Saving...";

		var ret_msg = ""
		
		$.get("/json_func",
			{
				//qdata : "Branch_Save 'Add','programmer',1,0,'"+$('[name=sup_name]').val()+"' ,'"+$('[name=sort]').val()+"' ,'"+$('[name=remarks]').val()+"'"
				qdata: "OtherDisHdr_SaveAdd '{{.Tconf.username}}',{{.Tconf.Org_id}}, '" +  $('[name=trandate]').val() + "'," + $('[name=trantype]').val() + ",'" + $('[name=remarks]').val() +"', " +  $('[name=partner]').val()

			}
			,
			function (data, status) {
				//json_personnel = data
				if (data != null) {
					for (var i = 0; i < data.length; i++) {
						//alert(data[i][0]);

						ret_msg = data[i][1]
						if (data[i][1] == "Success") {
							//console.log(data[i][0])
							//alert(ret_msg)
							//$('#basic').modal('hide')
							//dtbl()
							//console.log("success here")
							//$("#item_tagsdata").show()
							//$(".submit_btn").prop('disabled', true);
							$(".c_suprec_id").val(data[i][0])
							GotoDetail(data[i][0])
							//return false;
						} else {
							alert(ret_msg)
						}

					}
				}
					
			});
		}
		return false;
		

	}

